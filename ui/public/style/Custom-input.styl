.Custom-input {
  background-color $violet_color !important;
  color white;
  text-align left;
  transition border 0.5s ease 0s;
  padding 4px;

  &::placeholder {
    color $grey_color;
  }

  &__black-back {
    border 1px solid $orange_color;

    &:hover {
      border 1px solid white;
    }
  }

  &__white-back {
    border none;

    &:hover {
      border 1px solid $orange_color;
    }
  }
}