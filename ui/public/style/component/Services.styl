.Services {
  background white;
  margin-top 20rem;
  padding-bottom 15rem;
  display flex;
  flex-direction column;
  width 100%;
  min-width 980px;

  &__header {
    font-size 4rem;
    color $orange_color;
    text-align center;
    padding 3rem;
  }

  &__service-links {
    display flex;
    flex-direction row;
    justify-content center;
    font-size 1.3rem;
  }

  &__service_link {
    color #7f7f7f;
    cursor pointer;
    margin 8%;
    margin-top 0;
    margin-bottom 0;
    border-bottom 3px solid grey;

    &__active {
      color $orange_color;
      border-bottom 3px solid $orange_color !important;
    }
  }

  &__description {
    display flex;
    font-size 1.1rem;
    align-items center;
    padding 1rem;
    padding-left 8%;
  }

  &__circle-icon {
    color $orange_color;
    font-size 0.7rem;
    text-align center;
    margin-right 0.3rem;
  }

}