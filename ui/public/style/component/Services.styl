.Services {
  background white;
  margin-top 20rem;

  &__header {
    font-size 4rem;
    color $orange_color;
    text-align center;
    padding 3rem;
  }

  &__service-links {
    display flex;
    flex-direction row;
    justify-content center;
    font-size 1.3rem;
  }

  &__service_link {
    color #7f7f7f;
    cursor pointer;
    margin 12rem;
    margin-top 0;
    border-bottom 3px solid grey;

    &__active {
      color $orange_color;
      border-bottom 3px solid $orange_color !important;
    }
  }
}