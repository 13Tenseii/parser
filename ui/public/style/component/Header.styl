.Header {
  position: relative;
  margin-top 0;
  z-index 50;
  left 0;
  width 100%;
  display flex;
  flex-direction row;
  color: #ffffff;

  &__logo-img {
    width 250px;
    height 100%;
  }

  &__links {
    display flex;
    position: absolute;
    align-self center;
    right 5%;
  }

  &__link {
    text-align center;
    margin-right 4rem;
    font-size 1.3rem;
    cursor: pointer;

    &:hover {
      color rgba(246, 81, 61, 1);
    }
  }
}